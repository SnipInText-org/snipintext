{
  "name": "snipintext",
  "version": "1.0",
  "description": "snippeter for text areas",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs" ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "/options/options.html",
  "browser_action": {
    "default_popup": "/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://developer.chrome.com/*","https://vk.com/*","http://localhost/*"],
      "js": ["jquery-3.3.1.min.js","./api/messages.js","./content/content.js","./content/content_snippet_handler.js"],
      "css": ["./content/content.css"]
    }
  ],
  "icons": {
      "16": "./images/icon.png",
      "32": "./images/icon.png",
      "48": "./images/icon.png",
      "128": "./images/icon.png"
    }
}
